<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="match_parent"
               android:layout_height="220dp"
               android:src="@drawable/droidcon"
               android:scaleType="centerCrop"
               android:id="@+id/motion"
               android:layout_alignParentTop="true"/>

    <ImageView
            android:src="@drawable/ic_keyboard_arrow_up_pink_48dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/up_arrow"
            android:layout_below="@+id/motion"
            android:layout_centerHorizontal="true"/>

    <ImageView android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_below="@+id/up_arrow"
               android:layout_centerHorizontal="true"
               android:src="@drawable/ic_car_pink_48dp"
               android:id="@+id/car"/>

    <ImageView
            android:src="@drawable/ic_keyboard_arrow_down_pink_48dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/down_arrow"
            android:layout_below="@+id/car"
            android:layout_centerHorizontal="true"/>
    <ImageView
            android:src="@drawable/ic_keyboard_arrow_right_pink_48dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/right_arrow"
            android:layout_below="@+id/up_arrow"
            android:layout_toRightOf="@+id/car"
            android:layout_toEndOf="@+id/car"/>
    <ImageView
            android:src="@drawable/ic_keyboard_arrow_left_pink_48dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/left_arrow"
            android:layout_below="@+id/up_arrow"
            android:layout_toLeftOf="@id/car"/>

    <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_mic_white_48dp"
            android:id="@+id/voice_recognition_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            style="@style/BTNFloat"/>


</RelativeLayout>
