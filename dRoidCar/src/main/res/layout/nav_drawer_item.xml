<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/nav_drawer_v_spacing_divider_group"
    android:paddingBottom="@dimen/nav_drawer_v_spacing_divider_group"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_drawer_item_selector"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_drawer_item_icon"
        android:layout_marginLeft="@dimen/nav_drawer_first_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_drawer_first_margin"
        android:paddingTop="4dp"
        android:textSize="@dimen/text_subHead"
        android:textColor="@color/nav_draw_text_state_list"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/nav_drawer_item_label" />

</LinearLayout>